#form{data: {role: "page",theme: 'a', :'add-back-btn' => 'true'}}
  #header2{data: {role: 'header', position: 'fixed'}}
    %h1
      Booking
  %div{data: {role: "content"}}
    #booking-form
  #footer{'data-role' => "footer", 'data-position' => "fixed"}
    %div{data: {role: "navbar", iconpos: :top}}
      %ul
        %li
          %a#delete-booking-btn{:href => '#', data: {role:"button", icon:"delete"} } Delete
        %li
          %a#save-booking-btn{:href => '#', data: {role:"button", icon:"check"} } Save
        %li
          %a#finish-booking-btn{:href => '#home', data: {role:"button", icon:"start"} } Finish
  
  %script#booking-form-template{type: 'text/template'}
    %form{action: '/bla', method: "post"}
      - ['project', 'activity' ].each do |c|
        %div{data:{role:'fieldcontain'}}
          %label.select{for:"select-#{c}"} 
            #{c.capitalize}
          %select{name:"#{c}_id", id: "select-#{c}", :'data-selId' => "{{ m.get('#{c}_id') }}"}
      %div{data:{role:'fieldcontain'}}
        %label{for:"comment"} 
          Comment
        %textarea{ name:"comment", id: "comment"}
          {{ m.get('comment') }}
      %div{data:{role:'fieldcontain'}}
        %label{for:"start_time"} 
          From
        %input{value: "{{ m.getStartTime() }}", type:'time',name:"start_time", id: "start_time", data:{role:'datebox', options:'{"mode":"timeflipbox", "useFocus": true}'}}
      %div{data:{role:'fieldcontain'}}
        %label{for:"end_time"} 
          To
        %input{value: "{{ m.getEndTime() }}", type:'time',name:"end_time", id: "end_time", data:{role:'datebox', options:'{"mode":"timeflipbox", "useFocus": true}'}}
      %div{data:{role:'fieldcontain'}}
        %label{for:"date"} 
          Date
        %input{value: "{{ m.getDate() }}",type:'date',name:"date", id: "date", data:{role:'datebox', options:'{"overrideDateFormat":"%d.%m.%Y","mode":"flipbox", "useFocus": true}'}}
